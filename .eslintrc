{
  "env": {
    "browser": true,
    "es6": true, // allows to use Promise
    "node": true, // allows to use require()
  },
  "extends": "eslint:recommended",
  "globals": {
    "NODE_ENV": false,
  },
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "promise",
    "compat",
    "react",
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true,
    },
  },
  "rules": {
    "camelcase": 1,
    "comma-spacing": 1,
    "comma-dangle": ["warn", "only-multiline"],
    "consistent-return": 0, // it doesn't help much, but after respecting the rule, the code looks durty.
    "curly": [1, "all"],
    "dot-notation": [2, { "allowKeywords": true }],
    "eol-last": 2,
    "eqeqeq": 1,
    "jsx-quotes": [2, "prefer-double"],
    "key-spacing": [1, {
      "singleLine": {
        "beforeColon": false,
        "afterColon": true,
        "mode": "minimum",
      },
      "multiLine": {
        "beforeColon": false,
        "afterColon": true,
        "mode": "minimum",
      },
    }],
    "new-cap": 2,
    "new-parens": 2,
    "no-alert": 2,
    "no-array-constructor": 2,
    "no-caller": 2,
    "no-catch-shadow": 2,
    "no-empty": 1,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-parens": [2, "functions"],
    "no-extra-semi": 1,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-label-var": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": [1, {
      "ignoreEOLComments": true,
      "exceptions": {
        "Property": true,
        "VariableDeclarator": true,
        "ImportDeclaration": true,
      },
    }],
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 1,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-wrappers": 2,
    "no-octal-escape": 2,
    "no-delete-var": 2,
    "no-process-exit": 2,
    "no-proto": 2,
    "no-return-assign": 2,
    "no-script-url": 1,
    "no-sequences": 2,
    "no-shadow": 0,
    "no-shadow-restricted-names": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 1,
    "no-undef-init": 2,
    "no-underscore-dangle": 0,
    "no-unexpected-multiline": 2,
    "no-unused-expressions": 2,
    "no-unused-vars": 1,
    "no-use-before-define": 0,
    "no-useless-escape": 0,
    "no-with": 2,
    "quotes": [2, "single"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": 0,
    "semi": 0,
    "semi-spacing": [2, {"before": false, "after": true}],
    "space-before-function-paren": [1, "never"],
    "space-infix-ops": 0,
    "keyword-spacing": 1,
    "space-unary-ops": [2, { "words": true, "nonwords": false }],
    "strict": 1, // babel inserts 'use strict' automatically, warning level set just in case
    "yoda": [2, "never"],
    "valid-jsdoc": 0,
  },
}
